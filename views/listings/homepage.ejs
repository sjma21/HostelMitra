<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div id="chatbox-icon" style="background-color: #6f8ebc;">
    💬
</div>

<!-- Chatbox Modal -->
<div id="chatbox">
    <div id="chatbox-header" style="background-color: #6f8ebc;">
        HostelMitra Assistant
        <span id="close-chatbox">✖</span>
    </div>
    <div id="chatbox-content">
        <div class="chat-question" onclick="showResponse(1)">How do I find a hostel near my preferred location?</div>
        <div class="chat-question" onclick="showResponse(2)">Can I filter hostels by price or room type?</div>
        <div class="chat-question" onclick="showResponse(3)">What types of room options are available?</div>
        <div class="chat-question" onclick="showResponse(4)">Is there a way to view hostels suitable for girls only or boys only?</div>
        <div class="chat-question" onclick="showResponse(5)">What amenities are provided in each hostel listing?</div>
        <div class="chat-question" onclick="showResponse(6)">How can I add a hostel to my wishlist or compare it with others?</div>
        <div class="chat-question" onclick="showResponse(7)">Are there any discounts or offers available?</div>
        <div class="chat-question" onclick="showResponse(8)">How do I leave a review or rating for a hostel?</div>
        <div class="chat-question" onclick="showResponse(9)">What should I do if I need help with my booking?</div>
    </div>
</div>

<script>
    // Toggle chatbox display
    document.getElementById('chatbox-icon').addEventListener('click', function() {
        document.getElementById('chatbox').style.display = 'flex';
    });
    document.getElementById('close-chatbox').addEventListener('click', function() {
        document.getElementById('chatbox').style.display = 'none';
    });

    // Function to show response based on question clicked
    function showResponse(questionNumber) {
        const responses = [
            "You can use our map feature to search hostels in your desired area. Just enter the location, and we'll display all available hostels nearby!",
            "Absolutely! Our filter options allow you to sort hostels by price, rating, room type, and more. You can find these filters at the top of the listings page.",
            "We offer various room types, including single and shared options. You can select your preference using the room type filter.",
            "Yes, you can filter by hostel type to view options like 'girls only,' 'boys only,' or 'coed.' Just select your preference from the filters.",
            "Each hostel listing includes details about amenities like CCTV, fire safety, security guards, meals, and more. Check the listing page for a complete list!",
            "To save a hostel, just click on 'Add to Wishlist.' For comparing, select hostels and hit 'Compare Selected Hostels' to see them side by side!",
            "We frequently update our listings with discounts! Keep an eye on our featured hostels section for any ongoing offers.",
            "Once you've stayed at a hostel, you can leave a review on its listing page. Just go to 'Add Review,' rate your experience, and share your feedback.",
            "For booking assistance, feel free to reach out via our contact form, or email us at support@hostelmitra.com."
        ];

        const chatboxContent = document.getElementById('chatbox-content');
        const responseElement = document.createElement('div');
        responseElement.className = 'chat-response';
        responseElement.textContent = responses[questionNumber - 1];
        chatboxContent.appendChild(responseElement);
        chatboxContent.scrollTop = chatboxContent.scrollHeight;
    }
</script>

</body>
</html>
