<% layout("/layouts/boilerplate") %>

 
    <style>
      
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }
    
    /* Hero Section */
    .hero {
        margin-top:50px;
        padding-top: 50px;
        background-image: url('https://images.pexels.com/photos/7968285/pexels-photo-7968285.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1'); /* Replace with your image URL */
        background-size: cover;
        background-position: center;
        color: rgb(72, 105, 149);
        text-align: center;
        padding: 100px 20px;
        position: relative;
        overflow: hidden; /* Ensure the overlay stays within bounds */
    }
    
    /* Overlay */
    .hero::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.7); /* Light overlay */
        z-index: 1; /* Place it below the content but above the background */
    }
    
    .hero h1,
    .hero p,
    .hero a {
        position: relative;
        z-index: 2; /* Ensure content is above the overlay */
    }

    .hero h1 {
        font-size: 3rem;
        margin-bottom: 20px;
        color: rgb(72, 105, 149);
    }

    .hero p {
        font-size: 1.5rem;
        margin-bottom: 30px;
        color: rgb(72, 105, 149);
    }

    .hero a {
        background-color: #007bff;
        color: white;
        padding: 15px 30px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1.2rem;
        transition: background-color 0.3s;
    }

    .hero a:hover {
        background-color: #1e354e;
        color: white;
    }




        @keyframes fadeInDown {
            0% { opacity: 0; transform: translateY(-50px); }
            100% { opacity: 1; transform: translateY(0); }
        }

        @keyframes fadeInUp {
            0% { opacity: 0; transform: translateY(50px); }
            100% { opacity: 1; transform: translateY(0); }
        }

        /* Introduction Section */
        .intro {
            padding: 60px 20px;
            text-align: center;
            background-color: #f9f9f9;
        }

        .intro h2 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .intro p {
            font-size: 1.2rem;
            max-width: 800px;
            margin: 0 auto;
        }

        /* Featured Hostels Section */
        .featured-hostels {
            padding: 60px 20px;
            background-color: #fff;
        }

        .featured-hostel-card {
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .featured-hostel-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
        }

        /* Testimonials Section */
        .testimonials {
            background-color: #f2f2f2;
            padding: 60px 20px;
        }

        .testimonial {
            margin: 20px 0;
            padding: 20px;
            border-left: 5px solid #007bff; /* Bootstrap primary color */
            background-color: #ffffff;
            border-radius: 5px;
        }

        /* Footer Section */
        .footer-links {
            padding: 20px 0;
            background: #343a40;
            color: white;
        }

        .footer-links a {
            color: #ffffff;
            text-decoration: none;
        }

        /* Media Queries for Responsiveness */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }
            .hero p {
                font-size: 1.2rem;
            }
        }

        #chatbox-icon {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #007bff;
        color: white;
        padding: 15px;
        border-radius: 50%;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        font-size: 1.5rem;
    }
    
    #chatbox {
        position: fixed;
        bottom: 80px;
        right: 20px;
        width: 300px;
        height: 400px;
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        display: none;
        flex-direction: column;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    }
    
    #chatbox-header {
        background-color: #007bff;
        color: white;
        padding: 10px;
        font-weight: bold;
        text-align: center;
        border-radius: 8px 8px 0 0;
    }
    
    #chatbox-content {
        padding: 10px;
        overflow-y: auto;
        flex-grow: 1;
        font-size: 0.9rem;
    }
    
    .chat-question {
        padding: 8px;
        background-color: #f8f9fa;
        border-radius: 5px;
        cursor: pointer;
        margin-bottom: 6px;
    }
    
    .chat-question:hover {
        background-color: #e9ecef;
    }
    
    .chat-response {
        margin-top: 5px;
        color: #007bff;
    }
    
    #close-chatbox {
        cursor: pointer;
        position: absolute;
        top: 8px;
        right: 8px;
        color: white;
    }

    /* General Hero Section Styling */
#hero-slider {
    margin-bottom: 50px;
}

.slider-img {
    height: 80vh; /* Fits the image to 80% of viewport height */
    object-fit: cover; /* Ensures full coverage without stretching */
}

#hero-slider .carousel-caption h1,
#hero-slider .carousel-caption p {
    color: #fff;
    text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
}

#hero-slider .btn {
    background-color: #ff6b6b; /* HostelMitra theme color */
    border-radius: 20px;
    padding: 12px 25px;
    font-weight: bold;
}

#hero-slider .btn:hover {
    background-color: #ff4d4d;
}

/* Carousel Control Styling */
.carousel-control-prev-icon,
.carousel-control-next-icon {
    filter: invert(1); /* Makes the control icons white for better visibility */
}

</style>
    </style>
</head>
<body>

<!-- Hero Section -->
<section id="hero-slider">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/a1.jpg" alt="Comfortable Hostel 1" class="d-block w-100 slider-img">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4">Find Your Perfect Hostel</h1>
                    <p>Comfortable, affordable, and safe accommodations tailored to your needs.</p>
                    <a href="#search" class="btn btn-lg" style="background-color: #cfe2ff;">Search Now</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/a12.jpg" alt="Safe and Affordable Hostel 2" class="d-block w-100 slider-img">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4">Explore Hostels Near You</h1>
                    <p>Discover the best hostels with top amenities and friendly communities.</p>
                    <a href="#search" class="btn btn-lg" style="background-color: #cfe2ff;">Explore Hostels</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/a13.jpg" alt="Top Hostel Facilities 3" class="d-block w-100 slider-img">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4">Your Home Away From Home</h1>
