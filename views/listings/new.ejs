<% layout("/layouts/boilerplate")%>
<%- include("../includes/flash.ejs") %>


<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3 class="text-center mt-4 mb-4"> Add Your Hostel</h3>
    <p class="text-center mt-4 mb-4"> Connect with Students Seeking Comfortable Accommodation!</p>

   
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="listing[hotelName]" class="form-label">HostelName</label>
            <input name="listing[hotelName]" type="text" class="form-control" placeholder="Enter the name that stands out!" required>
       <div class="valid-feedback">HostelName looks good!</div>
        </div>
        <div class="mb-3">
            <label for="hostelDescription" class="form-label">hostelDescription</label>
            <textarea name="listing[hostelDescription]"  class="form-control" placeholder="Describe your hostel's unique features and amenities..." required></textarea>
            <div class="invalid-feedback">PLease enter a short description.</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Hostel Image</label>
            <input name="listing[image]" placeholder="Paste the perfect image URL to showcase your hostel" type="file" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="roomType" class="form-label">Room Type</label>
            <select name="listing[roomType]" class="form-select" required>
                <option value="single">Single Room</option>
                <option value="shared">Shared Room</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="hostelType" class="form-label">Hostel Type</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="listing[hostelType]" id="girlsOnly" value="girls-only" required>
                <label class="form-check-label" for="girlsOnly">Girls Only</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="listing[hostelType]" id="boysOnly" value="boys-only">
                <label class="form-check-label" for="boysOnly">Boys Only</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="listing[hostelType]" id="coed" value="coed">
                <label class="form-check-label" for="coed">Coed</label>
            </div>
        </div>
        <div class="mb-3">
            <label for="safetyFeatures" class="form-label">Safety Features</label>
            <div class="form-check">
                <input type="checkbox" name="listing[safetyFeatures][]" value="CCTV" class="form-check-input">
                <label class="form-check-label" for="safetyFeatures">CCTV</label>
            </div>
            <div class="form-check">
                <input type="checkbox" name="listing[safetyFeatures][]" value="Fire Safety" class="form-check-input">
                <label class="form-check-label" for="safetyFeatures">Fire Safety</label>
            </div>
            <div class="form-check">
                <input type="checkbox" name="listing[safetyFeatures][]" value="Security Guard" class="form-check-input">
                <label class="form-check-label" for="safetyFeatures">Security Guard</label>
            </div>
        </div>
        
        <!-- Meals -->
        <div class="mb-3">
            <label for="meals" class="form-label">Meals Provided</label>
            <select name="listing[meals]" class="form-select" required>
                <option value="None">None</option>
                <option value="Breakfast">Breakfast</option>
                <option value="Breakfast and Dinner">Breakfast and Dinner</option>
                <option value="All Meals">All Meals</option>
            </select>
        </div>
        <div class="row"> 
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Set the ideal rent per month (â‚¹)" class="form-control" required type="number">
                <div class="invalid-feedback">Price should be valid.</div>
            </div>

            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" type="text" placeholder="City, area, or landmark location" type="text" class="form-control" required>
                <div class="invalid-feedback">Location should be valid.</div>   
            </div>
        </div>
        <div class="mb-3">
            <label for="contactPhone" class="form-label">Phone Number</label>
            <input name="listing[contact][phone]" type="text" class="form-control" placeholder="Enter phone number">
        </div>
    
        <div class="mb-3">
            <label for="contactEmail" class="form-label">Email</label>
            <input name="listing[contact][email]" type="email" class="form-control" placeholder="Enter email">
        </div>

       <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" type="text" placeholder="Which country is your hostel located in?" type="text" class="form-control" required>
        <div class="invalid-feedback">Country name should be valid.</div> 
    </div>
  
        
        <button class="btn btn-dark">Add</button>
        <br><br>
    </form>
</div>
</div>